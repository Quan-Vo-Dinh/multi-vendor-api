    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.4.2",
    "prisma": "^6.16.2",
    "prisma-json-types-generator": "^3.6.1",
    "react-email": "4.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
